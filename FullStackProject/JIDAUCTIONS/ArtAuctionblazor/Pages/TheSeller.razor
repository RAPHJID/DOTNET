            ImageUrl="https://i.pinimg.com/236x/eb/e7/59/ebe759bfa5403bf871c57f8e350f63a8.jpg",
            EndDate=DateTime.Now.AddDays(10)
        },     
    };

    public void AddNewArt(Art newArt)
    {
        newArt.Id = arts.Count + 1;
        arts.Add(newArt);
    }
}
