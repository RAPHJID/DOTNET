@page "/managearts"
<div class="main">
<div class="container mt-5 bg-light p-4">
    <h3 class="text-dark mb-4">Manage Arts</h3>

    @if (arts.Any())
    {
        <table class="table table-dark table-striped">
            <thead>
                <tr>
                    <th scope="col">Art Name</th>
                    
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var art in arts)
                {
                    <tr>
                        <td>@art.Name</td>
                        
                        <td>
                            <button class="btn btn-primary">
                                <i class="bi bi-pencil"></i> Edit
                            </button>
                            <button class="btn btn-danger" @onclick="() => DeleteArt(art)">
                                <i class="bi bi-trash"></i> Delete
                            </button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p class="text-muted">No arts available.</p>
    }
</div>
</div>

@code {
    List<Art> arts;

    
    protected override void OnInitialized()
    {
        
        arts = FetchArts();
    }

    void DeleteArt(Art art)
    {
       
        arts.Remove(art);
    }

    List<Art> FetchArts()
    {
        return new List<Art>
        {
            new Art { Name = "MonaLifta", CurrentBid = 80000 },
            new Art { Name = "The Persistence of Memory", CurrentBid = 30000 },
            new Art { Name = "MonaLifta", CurrentBid = 7900 },
            new Art { Name = "The Persistence of Memory", CurrentBid = 305700 },
            new Art { Name = "MonaLifta", CurrentBid = 83200 },
            new Art { Name = "The Persistence of Memory", CurrentBid = 300080 },
            new Art { Name = "MonaLifta", CurrentBid = 878000 },
            new Art { Name = "The Persistence of Memory", CurrentBid = 10000 }
            
        };
    }
}
