@page "/managebids"
<div></div>
<div class="container mt-5 bg-light p-4">
    <h3 class="text-dark mb-4">Manage Bids</h3>

    @if (bids.Any())
    {
        <table class="table table-dark table-striped">
            <thead>
                <tr>
                    <th scope="col">Art Name</th>
                    <th scope="col">Bid Amount</th>
                    <th scope="col">User</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var (art, bidAmount, user) in bids)
                {
                    <tr>
                        <td>@art.Name</td>
                        <td>@bidAmount</td>
                        <td>@user.Username</td>
                        <td>
                            <button class="btn btn-primary">
                                <i class="bi bi-pencil"></i> Edit
                            </button>
                            <button class="btn btn-danger" @onclick="() => DeleteBid(art, bidAmount, user)">
                                <i class="bi bi-trash"></i> Delete
                            </button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p class="text-muted">No bids available.</p>
    }
</div>

