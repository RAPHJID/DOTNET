@page "/artcategories"

<h3 class="mt-3">Art Category Management</h3>

<div class="container">
    <div class="row">
        @foreach (var art in arts)
        {
            <div class="col-md-4 mb-4">
                <div class="card bg-dark text-white shadow">
                    <div class="card-body">
                        <h5 class="card-title">Name: @art.Name</h5>
                        <p class="card-text">Category: <input @bind="art.Category" class="form-control" /></p>
                        <p class="card-text">Status: @art.Status</p>
                        <p class="card-text">Current Bid: @art.CurrentBid</p>
                        <button @onclick="() => SaveChanges(art)" class="btn btn-primary">Save Changes</button>
                    </div>
                </div>
            </div>
        }
    </div>
</div>


