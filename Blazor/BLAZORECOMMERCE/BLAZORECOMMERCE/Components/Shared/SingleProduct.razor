
<div class="card shadow col-4 p-4" style="width: 18rem;">
    <img src="@product.Image" class="card-img-top" alt="@product.ProductName">
    <div class="card-body">
        <h5 class="card-title">@product.ProductName</h5>

        <div class="d-flex justify-content-between">
            <span>
                @product.ProductDescription
            </span>
            <span>
                @product.Price
            </span>
        </div>
        <div class="d-flex justify-content-between">
            <button @onclick="editProduct" type="button" class="btn btn-primary">Edit</button>
            <button @onclick="deleteProduct" type="button" class="btn btn-danger">Delete</button>
        </div>
    </div>
</div>


@code {

    [Parameter]

    public Product product { get; set; } = default!;

    [Parameter]
    public EventCallback<Product> OnEditProduct { get; set; }

    public async Task editProduct()
    {
        await OnEditProduct.InvokeAsync(product);
    }
    [Parameter]
    public EventCallback<Product> OnDeleteProduct { get; set; }

    public async Task deleteProduct()
    {
        await OnDeleteProduct.InvokeAsync(product);
    }
}